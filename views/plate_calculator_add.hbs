<header class="masthead text-white container  align-items-center flex-column"
    style="padding-top: 7em;padding-bottom: 2em;">
    <!--    form data -->

    <div class="card " style="margin: 1%;">
        <div class="card-header text-info border-0">
            <a href="/plate/calculator"><button class="btn btn-info "><i
                        class="far fa-arrow-alt-circle-left"></i></button></a>
        </div>
        <div class="card-body text-center ">
            <form id="formData" class="was-validated " method="POST" action="/plate/calculator/add">
                <div class="form-group">
                    <label class="text-info" for="formGroupExampleInput">Meal Type</label>
                    <select class="custom-select" required name="meal_type">
                        <option value="">Select meal type..</option>
                        <option value="breakfast">Breakfast</option>
                        <option value="snack_1">First Snack</option>
                        <option value="lunch">Lunch</option>
                        <option value="snack_2">Second Snack</option>
                        <option value="dinner">Dinner</option>
                        <option value="extra">Extra</option>

                    </select>
                </div>
                <div class="form-group">
                    <label class="text-info" for="formGroupExampleInput">Article</label>
                    <select class="custom-select" required name="article">
                        <option value="">Select article..</option>
                        {{#each articles}}
                        <option value="{{this.id}}"> {{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label class="text-info" for="formGroupExampleInput">Quantity</label>
                    <input type="number" class="form-control" name="quantity" placeholder="Enter quantity in grams.."
                        required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </form>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".dropdown-menu li").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</header>