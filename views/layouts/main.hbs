    <div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close infoModalHandler" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <span id ="infoArea"><i class="fas fa-info-circle"></i> {{message}}</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger infoModalHandler" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addExtraModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content text-center">
                <div class="modal-header">
                    <strong id="exampleModalLabel" class="text-info">Add extra</strong>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">X</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="text-info" for="formGroupExampleInput">Details</label>
                        <input id="addExtraOutcomeDetails" type="text" class="form-control"  placeholder="Outcome details" required>
                    </div>
                    <div class="form-group">
                        <label class="text-info" for="formGroupExampleInput">Value</label>
                        <input id="addExtraOutcomeValue" type="number" class="form-control"  placeholder="Outcome value" required>
                    </div>
                </div>
                <div class="modal-footer">
                <div class="container">
                    <button id = "addExtra" type="button" class="btn btn-block btn-primary" data-dismiss="modal">Add</button>
                    <button type="button" class="btn btn-block btn-danger" data-dismiss="modal">Close</button>
                </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/addExtraController.js"></script>
    <script src="/js/cinemaController.js"></script>
    <script>
     let show ="{{infoModal}}" ;
        if(show) {
            jQuery.noConflict();
            $('#infoModal').modal(show)
        }

        function blockControl(elem) {

            elem.setAttribute('disabled','true');

            if(elem.type) {
                $(elem.parentElement.closest('div')).append(
                    `<div class="spinner-border spinner-border-sm text-info" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>`
                )
            }
        }

        function unblockControl(elem) {
            elem.removeAttribute('disabled');
            $('.spinner-border').remove();
        }   
    </script>
